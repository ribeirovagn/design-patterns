{
    "name": "design/patterns",
    "version": "0.0.1",
    "type": "project",
    "description": "Implementação em PHP de design patterns.",
    "keywords": [
        "Design Patterns",
        "Padrões de Projeto",
        "PHP",
        "Command",
        "Adapter",
        "Singleton"
    ],
    "license": "MIT",
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "behavioral": {
            "command": "php app/Behavioral/Command/Client.php"
        },
        "creational": {
            "singleton": "php app/Creational/Singleton/Client.php"
        },
        "structural": {
            "adapter": "php app/Structural/Adapter/Client.php"
        }
    }
}